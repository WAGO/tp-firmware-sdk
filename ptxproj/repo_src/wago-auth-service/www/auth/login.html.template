<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0">
  <title>$$PAGE_TITLE$$</title>
  <link rel="shortcut icon" type="image/x-icon" href="$$FAVICON_HREF$$">
  <link rel="stylesheet" href="auth.css">
  <script defer type="module" src="auth.js"></script>
  <script defer type="module" src="login.js"></script>
</head>
<body>
  <div taid="viewport" class="viewport $$SILENT_MODE_CLASS$$">
    <div taid="header" class="header">
      <img class="logo" draggable="false" src="images/wago-logo.svg" alt="logo">
    </div>
    <div taid="content" class="content">
      <div taid="center" class="center">
        <h1 taid="heading">Authentication</h1>
        <div id="context-info" class="$$SILENT_MODE_CLASS$$">
          <div><b>Hostname: </b><span taid="hostname">$$HOSTNAME$$</span></div>
          <div><b>Application: </b><span taid="application">$$CLIENT_NAME$$</span></div>
        </div>
        <div id="messages-container">
          <div class="success-message hidden">
            <span class="message-content" taid="success-message">$$SUCCESS_MESSAGE$$</span>
            <button class="close-message-btn" taid="close-success-message"></button>
          </div>
          <div class="error-message hidden">
            <span class="message-content" taid="error-message">$$ERROR_MESSAGE$$</span>
            <button class="close-message-btn" taid="close-error-message"></button>
          </div>
          <div class="system-use-message hidden">
            <span class="message-content" taid="system-use-notification">$$SYSTEM_USE_NOTIFICATION$$</span>
            <button class="close-message-btn" taid="close-system-use-notification"></button>
          </div>
        </div>
        <form class="login-form" method="POST" enctype="application/x-www-form-urlencoded">
          <div class="textfield">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" taid="username" placeholder="username">
          </div>
          <div class="textfield">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" taid="password" placeholder="password">
          </div>
          <div class="buttons">
            <a taid="cancel" class="cancel-link" href="$$CANCEL_URI$$">Cancel</a>
            <input taid="login" type="submit" value="Login">
          </div>
        </form>
      </div>
    </div>
    <div taid="footer" class="footer">
      <span taid="app-info" class="app-info">$$SERVICE_NAME$$ - Version $$SERVICE_VERSION$$ (API $$API_VERSION$$)</span>
      <span taid="copyright-info" class="copyright-info">Copyright Â© 2023-2025 WAGO GmbH & Co. KG</span>
    </div>
  </div>
</body>
</html>
