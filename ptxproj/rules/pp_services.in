	select LIBCOMMONHEADER                      if PP_SERVICES_DAEMON
	select WDX_CORE
	select WDX_CORE_TEST_LIB
	select WDX_WDM
	select WDX_WDM_CPP_HEADERS
	select WDX_LINUX
	select WDX_LINUX_CLIENT_LIB    if PP_SERVICES_DAEMON

	prompt "pp_services"
