## SECTION=elrest_specific_applications

config CLEAR_SCREEN
	tristate
	select QT5 if CLEAR_SCREEN_USE_QT5
	prompt "clear_screen"
	help
		qt based clear screen util

if CLEAR_SCREEN
choice
	prompt "QT_VERSION_USED"
		config CLEAR_SCREEN_USE_QT5
			bool
			prompt "QT5"

		config CLEAR_SCREEN_USE_QT6
			bool
			prompt "QT6"
endchoice
endif
